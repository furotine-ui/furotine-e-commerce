{
  "name": "furotine-server",
  "version": "1.0.0",
  "description": "Backend server for Furotine E-commerce platform",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "node --import tsx src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'node --import tsx' src/index.ts",
    "build": "tsc",
    "build:staging": "cross-env NODE_ENV=staging tsc",
    "build:prod": "cross-env NODE_ENV=production tsc",
    "start:dev": "cross-env NODE_ENV=development node --import tsx src/index.ts",
    "start:staging": "cross-env NODE_ENV=staging node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "node",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "Furotine Team",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.19.24",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
